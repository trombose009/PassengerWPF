<Window x:Class="CateringWPF.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hauptmenü"
        Height="350"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#111"
        Foreground="White">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="Catering starten" Width="200" Height="40" Margin="0,0,0,20"
                Click="BtnCatering_Click"/>
        <Button Content="Einstellungen" Width="200" Height="40" Margin="0,0,0,20"
                Click="BtnSettings_Click"/>
        <Button Content="Avatar-Zuordnung" Width="200" Height="40"
                Click="BtnAvatarMapping_Click"/>
    </StackPanel>
</Window>
