<Window x:Class="Catering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sitzplatz-Visualisierung"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="CabinCanvas" Width="1355" Height="768" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Sitzreihen -->
                <Image x:Name="SeatsBackground" Source="Images/seatsbackground.png" Width="1355" Height="768" Panel.ZIndex="1"/>
                <Image x:Name="SeatsMiddle" Source="Images/seatsmiddle.png" Width="1355" Height="768" Panel.ZIndex="4" IsHitTestVisible="False"/>
                <Image x:Name="SeatsFront" Source="Images/seatsfront.png" Width="1355" Height="768" Panel.ZIndex="7" IsHitTestVisible="False"/>

                <!-- Stewardess -->
                <Image x:Name="Stewardess" Source="Images/stheck.png"
                       Width="100" Canvas.Left="650" Canvas.Top="700" RenderTransformOrigin="0.5,1"
                       Panel.ZIndex="10">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="2.7" ScaleY="2.7"/>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </ScrollViewer>

        <!-- Button -->
        <Button x:Name="StartServiceButton" Content="Service starten"
                Width="140" Height="36" 
                Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"
                Click="StartServiceButton_Click"/>
    </Grid>
</Window>
