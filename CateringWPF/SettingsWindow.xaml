<Window x:Class="CateringWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        Background="#222"
        Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Avatars -->
            <RowDefinition Height="Auto"/>
            <!-- Orders -->
            <RowDefinition Height="Auto"/>
            <!-- Stewardess -->
            <RowDefinition Height="Auto"/>
            <!-- Cabin -->
            <RowDefinition Height="Auto"/>
            <!-- Catering CSV -->
            <RowDefinition Height="Auto"/>
            <!-- Avatar DB CSV -->
            <RowDefinition Height="Auto"/>
            <!-- Actual Flight CSV -->
            <RowDefinition Height="*"/>
            <!-- Save Button / Rest -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Avatars -->
        <TextBlock Text="Avatars Ordner:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtAvatars" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Button Content="..." Grid.Row="0" Grid.Column="2" Width="30" Click="BrowseAvatars_Click"/>

        <!-- Orders -->
        <TextBlock Text="Orders Ordner:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtOrders" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Button Content="..." Grid.Row="1" Grid.Column="2" Width="30" Click="BrowseOrders_Click"/>

        <!-- Stewardess -->
        <TextBlock Text="Stewardess Ordner:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtStewardess" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button Content="..." Grid.Row="2" Grid.Column="2" Width="30" Click="BrowseStewardess_Click"/>

        <!-- Cabin -->
        <TextBlock Text="Cabin Ordner:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtCabin" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <Button Content="..." Grid.Row="3" Grid.Column="2" Width="30" Click="BrowseCabin_Click"/>

        <!-- Catering CSV -->
        <TextBlock Text="Catering CSV:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtCateringCsv" Grid.Row="4" Grid.Column="1" Margin="5"/>
        <Button Content="..." Grid.Row="4" Grid.Column="2" Width="30" Click="BrowseCateringCsv_Click"/>

        <!-- Avatar DB CSV -->
        <TextBlock Text="Avatar DB CSV:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtAvatarDbCsv" Grid.Row="5" Grid.Column="1" Margin="5"/>
        <Button Content="..." Grid.Row="5" Grid.Column="2" Width="30" Click="BrowseAvatarDbCsv_Click"/>

        <!-- Actual Flight CSV -->
        <TextBlock Text="Actual Flight CSV:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtActualFlightCsv" Grid.Row="6" Grid.Column="1" Margin="5"/>
        <Button Content="..." Grid.Row="6" Grid.Column="2" Width="30" Click="BrowseActualFlightCsv_Click"/>

        <!-- Save Button -->
        <Button Content="Speichern" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Height="40" Margin="0,20,0,0"
                HorizontalAlignment="Center" Width="120" Click="BtnSave_Click"/>
    </Grid>
</Window>
