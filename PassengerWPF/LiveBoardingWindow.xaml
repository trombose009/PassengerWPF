<Window x:Class="PassengerWPF.LiveBoardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Boarding"
        Width="540"
        Height="960"
        MinWidth="540"
        MinHeight="960"
        Background="Black">

    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Boardingliste links -->
            <ColumnDefinition Width="*"/>
            <!-- Sitzplan rechts -->
        </Grid.ColumnDefinitions>

        <!-- Boardingliste -->
        <Border Grid.Column="0" Background="#AA000000" Padding="10" BorderBrush="DarkGray" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="BoardingListPanel" />
            </ScrollViewer>
        </Border>

        <!-- Sitzplan -->
        <Grid Grid.Column="1" Background="Black">
            <Grid>
                <Image Name="SeatmapImage" Stretch="Uniform" />
                <Canvas Name="SeatCanvas" Background="Transparent"
                        Width="{Binding ActualWidth, ElementName=SeatmapImage}"
                        Height="{Binding ActualHeight, ElementName=SeatmapImage}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
