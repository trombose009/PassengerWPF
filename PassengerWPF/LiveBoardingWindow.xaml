<Window x:Class="PassengerWPF.LiveBoardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Boarding"
        Width="540"
        Height="800"
        MinWidth="540"
        MinHeight="590"
        Background="Black">

    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Passagierliste -->
        <Border Grid.Column="0" Background="#AA000000" Padding="10" BorderBrush="DarkGray" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="BoardingListPanel"/>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="1" Background="Black">
            <Grid>
                <!-- Hintergrundbild -->
                <Image Name="SeatmapImage"
               Height="1200"
               Stretch="Uniform"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>
                <!-- Marker-Cavas -->
                <Canvas Name="SeatCanvas"
                Background="Transparent"
                Width="{Binding ActualWidth, ElementName=SeatmapImage}"
                Height="{Binding ActualHeight, ElementName=SeatmapImage}"/>
            </Grid>
        </Grid>


    </Grid>
</Window>
