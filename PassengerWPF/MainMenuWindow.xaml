<Window x:Class="PassengerWPF.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Menu" Height="400" Width="400">
    <StackPanel Margin="10">
        <!-- Bestehende Buttons -->
        <Button Content="Catering starten" Height="40" Click="BtnCatering_Click"/>
        <Button Content="Einstellungen" Height="40" Click="BtnSettings_Click"/>
        <Button Content="Avatar Mapping" Height="40" Click="BtnAvatarMapping_Click"/>
        <Button Content="Live-Boarding" Height="40" Click="BtnLiveBoarding_Click"/>


        <!-- Passenger-Daten Übersicht -->
        <GroupBox Header="Passenger-Daten Datei" Margin="0,20,0,0" Padding="10">
            <StackPanel>
                <TextBlock x:Name="TxtPassengerTimestamp" Text="Letzte Änderung: -"/>
                <Button x:Name="BtnClearPassengerData"
                 Content="Passenger-Daten leeren"
                 Margin="0,5,0,0"
                 Click="BtnClearPassengerData_Click"/>

            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
