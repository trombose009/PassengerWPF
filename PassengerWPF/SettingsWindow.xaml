<Window x:Class="PassengerWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen"
        Width="500" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#222"
        Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Avatars -->
            <RowDefinition Height="Auto"/>
            <!-- Orders -->
            <RowDefinition Height="Auto"/>
            <!-- Stewardess -->
            <RowDefinition Height="Auto"/>
            <!-- Cabin -->
            <RowDefinition Height="Auto"/>
            <!-- PassengerData CSV -->
            <RowDefinition Height="Auto"/>
            <!-- Avatar DB CSV -->
            <RowDefinition Height="Auto"/>
            <!-- Orders CSV -->
            <RowDefinition Height="Auto"/>
            <!-- Actual Flight CSV -->
            <RowDefinition Height="Auto"/>
            <!-- BG Image -->
            <RowDefinition Height="Auto"/>
            <!-- Boarding Sound -->
            <RowDefinition Height="Auto"/>
            <!-- Hintergrundmusik Kabine -->
            <RowDefinition Height="Auto"/>
            <!-- Platz für Rest / Save Button -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Avatars -->
        <TextBlock Text="Avatars Ordner:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtAvatars" Grid.Row="0" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="0" Grid.Column="2" Width="30" Click="BrowseAvatars_Click"/>

        <!-- Orders -->
        <TextBlock Text="Orders Ordner:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtOrders" Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="1" Grid.Column="2" Width="30" Click="BrowseOrders_Click"/>

        <!-- Stewardess -->
        <TextBlock Text="Stewardess Ordner:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtStewardess" Grid.Row="2" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="2" Grid.Column="2" Width="30" Click="BrowseStewardess_Click"/>

        <!-- Cabin -->
        <TextBlock Text="Cabin Ordner:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtCabin" Grid.Row="3" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="3" Grid.Column="2" Width="30" Click="BrowseCabin_Click"/>

        <!-- PassengerData CSV -->
        <TextBlock Text="PassengerData CSV:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtCateringCsv" Grid.Row="4" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="4" Grid.Column="2" Width="30" Click="BrowseCateringCsv_Click"/>

        <!-- Avatar DB CSV -->
        <TextBlock Text="Avatar DB CSV:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtAvatarDbCsv" Grid.Row="5" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="5" Grid.Column="2" Width="30" Click="BrowseAvatarDbCsv_Click"/>

        <!-- Orders CSV -->
        <TextBlock Text="Orders CSV:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtOrdersCsv" Grid.Row="6" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="6" Grid.Column="2" Width="30" Click="BrowseOrdersCsv_Click"/>

        <!-- Vielfliegerdatenbank csv -->
        <TextBlock Text="Vielfliegerdatenbank (*.csv):" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtBoardingCountCsv" Grid.Row="7" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="7" Grid.Column="2" Width="30" Click="BrowseBoardingCountCsv_Click"/>

        <!-- Hintergrundbild Vielflieger -->
        <TextBlock Text="Hintergrundbild Vielflieger:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtFrequentFlyerBg" Grid.Row="8" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="8" Grid.Column="2" Width="30" Click="BrowseFrequentFlyerBg_Click"/>

        <!-- BG Image Cabin -->
        <TextBlock Text="Hintergrundbild Kabine:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtBgImage" Grid.Row="9" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="9" Grid.Column="2" Width="30" Click="BrowseBgImage_Click"/>

        <!-- Boarding Sound -->
        <TextBlock Text="Sound Datei Boarding:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtBoardingSound" Grid.Row="10" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="10" Grid.Column="2" Width="30" Click="BrowseBoardingSound_Click"/>

        <!-- Hintergrundmusik Catering -->
        <TextBlock Text="Hintergrundmusik Catering:" Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TxtCateringMusic" Grid.Row="11" Grid.Column="1" Margin="5" Height="25"/>
        <Button Content="..." Grid.Row="11" Grid.Column="2" Width="30" Click="BrowseCateringMusic_Click"/>

        <!-- Save Button -->
        <Button Content="Speichern" Grid.Row="11" Grid.Column="1" Height="40" Margin="34,0,0,-107"
        HorizontalAlignment="Left" Width="120" VerticalAlignment="Bottom" Click="BtnSave_Click"/>


    </Grid>
</Window>
