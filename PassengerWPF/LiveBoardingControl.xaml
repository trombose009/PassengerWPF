<UserControl x:Class="PassengerWPF.LiveBoardingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto"
             Background="Black">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Passagierliste -->
        <Border Grid.Column="0"
                Background="#AA000000"
                Padding="10"
                BorderBrush="DarkGray"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="BoardingListPanel"/>
            </ScrollViewer>
        </Border>

        <!-- Seatmap + Marker -->
        <ScrollViewer Grid.Column="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="Transparent">
            <Canvas Width="1200" Height="1400">
                <!-- Hintergrundbild feste Größe -->
                <Image x:Name="SeatmapImage"
                       Width="1200" Height="1400"
                       Canvas.Left="0"
                       Canvas.Top="0"/>

                <!-- Canvas exakt darüber für Marker -->
                <Canvas x:Name="SeatCanvas"
                        Width="1200" Height="1400"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Background="Transparent"
                        IsHitTestVisible="False"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
