<Window x:Class="PassengerWPF.FrequentFlyerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="✈ Vielflieger-Ranking"
        Width="645"
        Height="970"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <!-- Hintergrundbild -->
        <Image x:Name="BgImageControl"
               Stretch="Fill"/>

        <!-- Halbtransparentes Overlay -->
        <Border Width="600"
                Height="880"
                Background="#783C3228"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="6">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titel -->
                <TextBlock Text="✈ Vielflieger-Ranking"
                           FontFamily="Cooper Black"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#FFF0C864"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Scrollbereich für Items -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ItemsPanel"/>
                </ScrollViewer>

                <!-- Sync Button -->
                <Button Grid.Row="2"
                        Content="Sync"
                        Width="200"
                        Height="45"
                        Margin="0,20,0,0"
                        FontSize="12"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Background="#B44682B4"
                        Foreground="White"
                        Click="BtnSync_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
