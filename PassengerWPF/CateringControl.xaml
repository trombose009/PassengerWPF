<UserControl x:Class="PassengerWPF.CateringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Black">

    <!-- Nur Root schwarz, keine globalen Styles -->
    <Grid Background="Black">

        <!-- CONTENT -->
        <ScrollViewer Background="Transparent"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">

            <Canvas x:Name="CabinCanvas"
                    Width="1355"
                    Height="768"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <!-- Sitzreihen-Layer (optional, werden auch per Code AddLayer hinzugefügt;
                     wenn du AddLayer nutzt, kannst du diese 3 Images weglassen) -->
                <!--
                <Image x:Name="SeatsBackground" Width="1355" Height="768" Panel.ZIndex="1"/>
                <Image x:Name="SeatsMiddle" Width="1355" Height="768" Panel.ZIndex="4" IsHitTestVisible="False"/>
                <Image x:Name="SeatsFront" Width="1355" Height="768" Panel.ZIndex="7" IsHitTestVisible="False"/>
                -->

                <!-- ✅ Stewardess MUSS existieren -->
                <Image x:Name="Stewardess"
                       Width="100"
                       Height="100"
                       Canvas.Left="650"
                       Canvas.Top="700"
                       RenderTransformOrigin="0.5,1"
                       Panel.ZIndex="10"
                       IsHitTestVisible="False">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="2.7" ScaleY="2.7"/>
                    </Image.RenderTransform>
                </Image>

            </Canvas>
        </ScrollViewer>

        <!-- START SERVICE BUTTON (Overlay) -->
        <Button x:Name="StartServiceButton"
                Panel.ZIndex="999"
                Content="▶ Start Service"
                Width="180"
                Height="44"
                FontSize="16"
                FontWeight="SemiBold"
                HorizontalAlignment="left"
                VerticalAlignment="top"
                Margin="0,0,0,20"
                Click="StartServiceButton_Click"/>
    </Grid>
</UserControl>
