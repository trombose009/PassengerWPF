<UserControl x:Class="PassengerWPF.CateringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Überschrift -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Scrollbereich Cabin -->
        </Grid.RowDefinitions>

        <!-- Überschrift -->
        <TextBlock Text="Catering"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10"
                   Grid.Row="0"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
            <Button x:Name="StartServiceButton" Content="Service starten"
            Width="140" Height="36"
            Click="StartServiceButton_Click"/>
        </StackPanel>


        <!-- Scrollbarer Bereich für die Cabin -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="CabinCanvas" Width="1355" Height="768" Background="Black">
                <!-- Sitzreihen -->
                <Image x:Name="SeatsBackground" Width="1355" Height="768" Panel.ZIndex="1"/>
                <Image x:Name="SeatsMiddle" Width="1355" Height="768" Panel.ZIndex="4" IsHitTestVisible="False"/>
                <Image x:Name="SeatsFront" Width="1355" Height="768" Panel.ZIndex="7" IsHitTestVisible="False"/>

                <!-- Stewardess -->
                <Image x:Name="Stewardess" Width="100" Canvas.Left="650" Canvas.Top="700" RenderTransformOrigin="0.5,1" Panel.ZIndex="10">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="2.7" ScaleY="2.7"/>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
