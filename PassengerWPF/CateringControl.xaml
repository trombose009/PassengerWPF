<UserControl x:Class="PassengerWPF.CateringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="1355" Height="768">
    <Canvas x:Name="CabinCanvas" Background="Black">

        <!-- Start-Button sichtbar -->
        <Button x:Name="StartServiceButton"
        Content="Start Service"
        Width="140" Height="50"
        Canvas.Left="20" Canvas.Top="20"
        Background="Orange"
        Foreground="Black"
        FontWeight="Bold"
        Panel.ZIndex="10"
        Click="StartServiceButton_Click"/>


        <!-- Stewardess -->
        <Image x:Name="Stewardess"
               Width="100" Height="100"/>
    </Canvas>
</UserControl>
