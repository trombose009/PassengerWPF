<Window x:Class="PassengerWPF.AvatarMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Avatar Mapping" Height="600" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <DataGrid x:Name="DataGridPassengers"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="100"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="140"/>
                <DataGridTextColumn Header="Sitzplatz" Binding="{Binding Sitzplatz}" Width="80"/>

                <DataGridTemplateColumn Header="Avatar" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Source="{Binding AvatarImagePath}" Width="64" Height="64" Margin="2" Stretch="UniformToFill" VerticalAlignment="Center"/>
                                <Button Grid.Row="1" Content="Ändern" Click="AvatarButton_Click" HorizontalAlignment="Center" Padding="4,1"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Order 1" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Source="{Binding Order1ImagePath}" Width="48" Height="48" Margin="2" Stretch="UniformToFill" VerticalAlignment="Center"/>
                                <Button Grid.Row="1" Content="Ändern" Click="OrderButton_Click" Tag="1" HorizontalAlignment="Center" Padding="4,1"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Order 2" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Source="{Binding Order2ImagePath}" Width="48" Height="48" Margin="2" Stretch="UniformToFill" VerticalAlignment="Center"/>
                                <Button Grid.Row="1" Content="Ändern" Click="OrderButton_Click" Tag="2" HorizontalAlignment="Center" Padding="4,1"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Order 3" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Source="{Binding Order3ImagePath}" Width="48" Height="48" Margin="2" Stretch="UniformToFill" VerticalAlignment="Center"/>
                                <Button Grid.Row="1" Content="Ändern" Click="OrderButton_Click" Tag="3" HorizontalAlignment="Center" Padding="4,1"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Order 4" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Source="{Binding Order4ImagePath}" Width="48" Height="48" Margin="2" Stretch="UniformToFill" VerticalAlignment="Center"/>
                                <Button Grid.Row="1" Content="Ändern" Click="OrderButton_Click" Tag="4" HorizontalAlignment="Center" Padding="4,1"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
